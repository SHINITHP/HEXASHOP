                            <div class="customer-listing Email-listing"><%= data.emailAddress %></div>
                            <div class="customer-listing"><%= data.phoneNo %></div>
                            <div class="customer-listing Inventory"><%= data.status ? 'Active' : 'Blocked' %></div>
                            <div class="customer-listing"><%= data.added.toLocaleDateString() %></div>
                            <div class="customer-listing">
                                <form class="actionForm"  method="post" action="CustomerDetails?id=<%= data._id %>&_method=PATCH">
