</header>
<% let count , cartCount %>

        <!-- show product datas -->
        <div class="container-fluid con-f1">
            <div class="row row-1">
                <div class="col-4 colms">
                    <h5>Product Name</h5>
                </div>
                <div class="col-2 colms">
                    <h5>Price</h5>
                </div>
                <div class="col-2 colms">
                    <h5>Quantity</h5>
                </div>
                <div class="col-2 colms">
                    <h5>Total Amount</h5>
                </div>
                <div class="col-1 colms"></div>
            </div>
            <% if(cartItems.length === 0) { %>
                <div class="row row-2 " style="min-height: 300px;display: flex;align-items: center;justify-content: center;">
                    <span>Your Cart section is currently empty, awaiting your selections.</span>
                </div>
            <% } else { %>  
            
            <% cartItems.forEach((item,index)=> { %>
                <% count = index + 1  , cartCount = index%>
                <% var itemId=item._id; %>
                    <div class="row row-2">
                        <div class="col-4 colms2 col_5">
                            <a href="/productOverview?id=<%= item.productID._id %>"><img class="cartImage"
                                    src="<%= item.productID.files[0].url %>" alt=""></a>
                            <div class="col-9 col5-col12">
                                <span><a href="/productOverview?id=<%= item.productID._id %>">
                                        <%= item.productID.ProductName %>
                                    </a></span>
                                <p style="font-weight: bold;">Size: <%= item.size %>
                                </p>

                                <p style="font-weight: bold;" class="availability availability<%=index%>">
                                    <% item.productID.ProductSize.forEach((size, index)=> { %>
                                        <% if (size.size==item.size) { %>
                                            <% if(size.quantity < 1){ %>
                                                Out Of Stock
                                                <% } else { %>
                                                    In Stock
                                                    <% } %>
                                                        <% } %>
                                                            <% }) %>
                                </p>

                                <p id="error<%=index%>" style="padding: 0;margin: 0; font-size: 9pt;color:red;font-weight: 600;"></p>
                            </div>

                        </div>
                        
                        <div class="col-2 colms2">
                            <p style="font-size: 14pt; padding-right: 15px;" class="salesRate"><i class="fa-solid fa-indian-rupee-sign"
                                    style=" font-size:13pt; padding-right: 5px;"></i>
                                    
                                    <%  if(item.productID.offer > 0) { %>
                                        
                                         <%= item.productID.SalesRate - item.productID.SalesRate * item.productID.offer / 100 %> <b style="font-weight: 500;text-decoration: line-through;"><%=item.MRP%></b>
                                        
                                    <% } else{ %>
                                        <%= item.productID.SalesRate %> 
                                    <% } %>
                                
                            </p> â‚¹<span class="discount" id="discount<%=index%>"style="text-decoration: line-through;color:rgb(63, 63, 63);">
                                <%=item.productID.MRP%>
                            </span>
                        </div>
                        <div class="col-2 colms2">
                            <div class="quantity">
                                <div class="proQty">

                                    <a ><input type="button"
                                        onclick="quantityIncDec('<%=index%>','<%=item._id%>','<%= JSON.stringify(cartItems) %>','decrement')"
                                        id="decrement<%=index%>" class="inc-dec dec" value="-"></a>

                                    <input type="text" class="Qty" id="showQty<%=index%>" readonly
                                        value="<%=item.quantity%>">

                                    <a > <input type="button" id="increment<%=index%>"
                                        onclick="quantityIncDec('<%=index%>','<%=item._id%>','<%= JSON.stringify(cartItems) %>','increment')"
                                        class="inc-dec" value="+"></a>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-2 colms2">
                            <!-- <p class="totalAmount" id="totalPrice" style="font-size: 13pt; font-family: Poppins;"> -->
                            <i class="fa-solid fa-indian-rupee-sign" style=" font-size:13pt;padding-right: 3px;"></i>
                            <input type="text" id="totalPrice<%=index%>" class="TotalAmount" readonly
                                value="<%= item.productID.SalesRate * item.quantity %>">
                            <!-- </p> -->
                        </div>
                        <div class="col-1 colms2">
                            <div class="cart__close">
                                <form action="/shoppingcart?task=deleteCartItem&_method=DELETE&id=<%=item._id%>" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" style="background: none; border: none; padding: 0; font: inherit; cursor: pointer;">
                                        <span><i class="fa-solid fa-xmark" style="color: #000000;"></i></span>
                                    </button>
                                </form>
                                
                                
                            </div>
                        </div>
                    </div>

                    <% }) %>

                <% } %>
                        <br>
                        <div class="row row-3">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="cart__btn">
                                    <a href="allProducts?task=showAllPro&page=1" style="border: 1px solid #aeaeae;">Continue
                                        Shopping</a>
                                </div>
                            </div>
                        </div>

                        <div class="row row-3">
                            <div class="col-lg-6">
                                
                            </div>
                            <div class="col-lg-4 offset-lg-2">
                                <div class="cart__total__procced">
                                    <h6>Cart total</h6>
                                    <ul>
                                        <li>Items(<%= count %>) <span
                                            style="display: flex; align-items: center;justify-content: center;"><i
                                                class="fa-solid fa-indian-rupee-sign" style=" font-size:13pt;"></i>
                                               <% let totalPrice = cartItems.reduce((acc, curr) => acc + (curr.productID.MRP * curr.quantity), 0); %>
                                            <input type="text" id="ExactPrice" class="cartAmount" readonly
                                                value="<%= totalPrice %>">
                                        </span></li>
                                        
                                        <% let cartTotal = cartItems.reduce((acc,curr) => acc + (curr.totalPrice - curr.productID.SalesRate * curr.productID.offer / 100  ),0); %>
                                        <% let discount = cartItems.reduce((acc,curr) => acc + ( cartTotal * curr.discount) / 100   , 0) %>
                                        <% let totalDiscount = cartItems.reduce((acc, curr) => acc + (curr.totalMRP - (curr.productID.SalesRate * curr.quantity) + curr.productID.SalesRate * curr.productID.offer / 100 ), 0); %>
                                        <li>Discount <span
                                                style="display: flex; align-items: center;justify-content: center;">-<i
                                                    class="fa-solid fa-indian-rupee-sign" style=" font-size:13pt;"></i>
                                                <input type="text" id="discountAmt" class="cartAmount" readonly style="text-decoration: line-through;"
                                                    value="<%=totalDiscount %>">
                                            </span></li>
                                           
                                        <li>Total Amount<span
                                                style="display: flex; align-items: center;justify-content: center;"><i
                                                    class="fa-solid fa-indian-rupee-sign" style=" font-size:13pt;"></i>
                                                <input type="text" id="cartTotal" class="cartAmount" readonly value="<%= cartTotal %>">
                                            </span></li>

                                    </ul>
                                    <% if(cartCount >= 0 ){ %> 
                                    <a style="cursor: pointer;"   onclick="saveOrder('<%= JSON.stringify(cartItems) %>')"
                                        class="primary-btn checkoutBtn" >Proceed to checkout</a>
                                    <% } else{ %> 
                                        <a style="cursor: pointer;" id="errorCheckoutBtn" onclick="cartError()" class="primary-btn checkoutBtn" >Proceed to checkout</a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
        </div>



        <!-- Footer starts here... -->
        <%- include('../../views/user/footer.ejs') %>
            <!-- Footer end  here... -->


